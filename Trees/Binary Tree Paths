class Solution {
public:
    void dfs(TreeNode* node, string path, vector<string>& ans) {
        if (!node) return;

        path += to_string(node->val);

        
        if (!node->left && !node->right) {
            ans.push_back(path);
            return;
        }

        path += "->";
        dfs(node->left, path, ans);
        dfs(node->right, path, ans);
    }

    vector<string> binaryTreePaths(TreeNode* root) {
        vector<string> ans;
        if (!root) return ans;

        dfs(root, "", ans);
        return ans;
    }
};
